---
// src/layouts/ProjectLayout.astro
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import BackgroundLayer from "../components/BackgroundLayer.astro";
import "../styles/global.css";
import { siteConfig } from "../config";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{siteConfig.name} | Project</title>

    <!-- Global Fonts (IBM Plex Mono) -->      
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png" />

    <style>
      html {
        scroll-behavior: smooth;
      }

      :root {
        --accent-color: {siteConfig.accentColor};
      }
    </style>
  </head>

  <body class="bg-white text-gray-900 font-sans relative">
    <BackgroundLayer />
    <Header />

    <main class="relative z-10 max-w-4xl mx-auto px-4 pt-48 pb-32">
      <slot />
    </main>

    <Footer />
  </body>

</html>