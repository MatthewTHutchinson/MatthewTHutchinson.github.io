---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { siteConfig } from "../../config";
---

<html lang="en">
  <head>
    <title>{siteConfig.name} | Art Portfolio</title>
    <meta name="description" content="Art and digital fabrication projects by {siteConfig.name}" />
  </head>
  <body class="bg-white text-gray-900 font-sans">
    <Header />
    <main class="max-w-4xl mx-auto px-4 py-24">
      <h1 class="text-4xl font-bold mb-8 text-[var(--accent-color)]">Art Portfolio</h1>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
        <!-- Art preview tiles -->
        <a href="/art/pagoda-lantern" class="block hover:shadow-lg transition">
          <img src="/images/pagoda.jpg" alt="Pagoda Lantern" class="rounded-lg mb-2" />
          <h2 class="text-xl font-semibold">Japanese Pagoda Lantern</h2>
        </a>

        <!-- Add more art project previews here -->
      </div>
    </main>
    <Footer />
  </body>
</html>